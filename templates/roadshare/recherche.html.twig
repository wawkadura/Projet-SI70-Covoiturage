{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron">

    <form method="post" action="{{path('roadshare_recherche')}}" >
      <div class="card bg-secondary mb-3" >
        <div class="card-body">
          <h5 class="card-title">Départ : </h5>
          <div class="form-inline">
            {% if recherche %}
              <input class="form-control mr-sm-2" name="adresseDepart" value="{{infosEntrees[0].rue}}" type="text" placeholder="Adresse" required>
              <input class="form-control mr-sm-2" name="codePostaleDepart" value="{{infosEntrees[0].codePostale}}" type="Number" placeholder="Code Postale" required>
              <input class="form-control mr-sm-2" name="villeDepart" value="{{infosEntrees[0].ville}}" type="text" placeholder="Ville" required>
            {% else %}
              <input class="form-control mr-sm-2" name="adresseDepart" type="text" placeholder="Adresse" required>
              <input class="form-control mr-sm-2" name="codePostaleDepart" type="Number" placeholder="Code Postale" required>
              <input class="form-control mr-sm-2" name="villeDepart" type="text" placeholder="Ville" required>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="card bg-secondary mb-3" >
        <div class="card-body">
          <h5 class="card-title">Arrivée : </h5>
          <div class="form-inline">
            {% if recherche %}
              <input class="form-control mr-sm-2" name="adresseArrivee" value="{{infosEntrees[1].rue}}" type="text" placeholder="Adresse" required>
              <input class="form-control mr-sm-2" name="codePostaleArrivee" value="{{infosEntrees[1].codePostale}}" type="Number" placeholder="Code Postale" required>
              <input class="form-control mr-sm-2" name="villeArrivee" value="{{infosEntrees[1].ville}}" type="text" placeholder="Ville" required>
            {% else %}
              <input class="form-control mr-sm-2" name="adresseArrivee" type="text" placeholder="Adresse" required>
              <input class="form-control mr-sm-2" name="codePostaleArrivee" type="Number" placeholder="Code Postale" required>
              <input class="form-control mr-sm-2" name="villeArrivee" type="text" placeholder="Ville" required>
            {% endif %}
          </div>
        </div>
      </div>
      <div class="card bg-secondary mb-3" >
        <div class="card-body">
          <h5 class="card-title">Date & Heure de depart : </h5>
          <div class="form-inline">
            {% if recherche %}
              <input class="form-control mr-sm-6" min ="datetime-local" max ="2022-01-01" name="dateDepart" value="{{infosEntrees[2]}}" type="date" placeholder="Date" required>
              <input class="form-control mr-sm-6" name="heureDepart" value="{{infosEntrees[3]}}" type="time" placeholder="Heure" required>
            {% else %}
              <input class="form-control mr-sm-6" min ="2000-01-01" max ="2022-01-01" name="dateDepart" type="date" placeholder="Date" required>
              <input class="form-control mr-sm-6" name="heureDepart" type="time" placeholder="Heure" required>
            {% endif %} 
          </div>
        </div>
      </div>
      <div class="card bg-secondary mb-3" >
        <div class="card-body">
          <h5 class="card-title">Critéres : </h5>
          <div class="form">
            {% if recherche %}
                <div class="form-group">
                  <div class="custom-control custom-checkbox mb-3">
                    {% if infosEntrees[4][0] %}
                      <input type="checkbox" name="fumeur" class="custom-control-input" id="fumeur" checked>
                    {% else %}
                      <input type="checkbox" name="fumeur" class="custom-control-input" id="fumeur">
                    {% endif %}                    
                    <label class="custom-control-label" for="fumeur">vous voulais fumer lors du trajet</label>
                  </div>
                  <div class="custom-control custom-checkbox mb-3">
                    {% if infosEntrees[4][1] %}
                      <input type="checkbox" name="animaux" class="custom-control-input" id="animaux" checked>
                    {% else %}
                      <input type="checkbox" name="animaux" class="custom-control-input" id="animaux">
                    {% endif %} 
                    <label class="custom-control-label" for="animaux">vous voulais amener un animale avec vous</label>
                  </div>
                  <div class="custom-control custom-checkbox mb-3">
                    {% if infosEntrees[4][2] %}
                      <input type="checkbox" name="musique" class="custom-control-input" id="musique" checked>
                    {% else %}
                      <input type="checkbox" name="musique" class="custom-control-input" id="musique">
                    {% endif %}
                    <label class="custom-control-label" for="musique">vous ne voulais pas de musique lors du trajet</label>
                  </div>
                </div>
            {% else %}
                <div class="form-group">
                  <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" name="fumeur" class="custom-control-input" id="fumeur">
                    <label class="custom-control-label" for="fumeur">vous voulais fumer lors du trajet</label>
                  </div>
                  <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" name="animaux" class="custom-control-input" id="animaux">
                    <label class="custom-control-label" for="animaux">vous voulais amener un animale avec vous</label>
                  </div>
                  <div class="custom-control custom-checkbox mb-3">
                    <input type="checkbox" name="musique" class="custom-control-input" id="musique">
                    <label class="custom-control-label" for="musique">vous ne voulais pas de musique lors du trajet</label>
                  </div>
                </div>
            {% endif %}
          </div>
        </div>
      </div>
      <button type="submit" class="btn btn-primary btn-lg btn-block">Lancer la recherche</button>
    </form>

</div>

{% if recherche %}
  {% if trajets|length >0 %}
    {% set i = 0 %}
    {% for list in trajets %}
      {% set i = i + list|length %}
    {% endfor %}
    Nous avons trouver {{i}} trajets
    <div class="list-group">
    {% for niveau in trajets %}
      {% for trajet in niveau %}
        <a href="{{path('roadshare_trajet',{'id':trajet.id})}}" class="list-group-item list-group-item-action flex-column align-items-start">
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1">{{trajet.heureDepart|date("H:i")}} - {{trajet.heureArrivee|date("H:i")}}</h5>
            <h5 class="text-muted">{{trajet.prix}}€</h5>
          </div>
          <p class="mb-1">{{trajet.adresseDepart.ville}} --> {{trajet.adresseArrivee.ville}}</p>
          <small class="text-muted">Proposer par : {{trajet.conducteur.prenom}}</small>
        </a>
      {% endfor %}
      
    {% endfor %}

  </div>
