{% extends 'base.html.twig' %}

{% block body %}
<br>
<div class="jumbotron">
<h4> Ajouter une voiture à votre compte</h4>
{{form_start(form)}}
<fieldset>
<div class="card bg-secondary mb-3" >
  <div class="card-body">
      {{form_row(form.marque, {'label':'Marque:', 'attr' : {
              'placeholder': 'marque du véhicule'
            }})}}
        
      {{form_row(form.couleur, {'label':'Couleur :','attr' : {
              'placeholder': 'Couleur du véhicule'
            }})}}
          
      {{form_row(form.immatriculation, {'label':'Immatriculation:', 'attr' : {
              'placeholder': 'Immatriculation du véhicule'
            }})}}
      {{form_row(form.model, {'label':'Model:', 'attr' : {
              'placeholder': 'Model du véhicule'
            }})}}      
  </div>
</fieldset>  
<button type="submit" class="btn btn-primary">Valider</button>
{{form_end(form)}}

{% endblock %}